[options]
background = 1f1f28
suppress_default_binds = true

overlay = true
overlay_font = Cascadia Code:17
overlay_text = "$(basename "$imv_current_file")" $imv_width x $imv_height
overlay_text_color = dcd7ba
overlay_background_color = 16161d

[binds]
q = quit
<Left> = prev
<bracketleft> = prev
h = prev
<Right> = next
<bracketright> = next
l = next
gg = goto 1
<Shift+G> = goto -1
j = pan 0 -50
k = pan 0 50
<Up> = zoom 1
<Shift+plus> = zoom 1
i = zoom 1
<Down> = zoom -1
<minus> = zoom -1
o = zoom -1
<Ctrl+r> = rotate by 90
f = fullscreen
d = overlay
p = exec echo $imv_current_file
c = center
s = scaling next
<Shift+S> = upscaling next
a = zoom actual
r = reset
<period> = next_frame
<space> = toggle_playing
t = slideshow +1
<Shift+T> = slideshow -1
